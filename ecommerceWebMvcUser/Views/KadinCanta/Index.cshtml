@section scripts {
    <script>
        // Bedenlere göre filtreleme işlemini yapacak JavaScript kodu
        $(document).ready(function () {
            // Bedenlere tıklama işlemleri
            $(".swacth-btn").click(function () {
                var selectedBeden = $(this).data("beden");
                if (selectedBeden === "all") {
                    $(".item").show(); // Tüm ürünleri göster
                } else {
                    $(".item").hide(); // Tüm ürünleri gizle
                    $(".item[data-beden='" + selectedBeden + "']").show(); // Seçilen bedene sahip ürünleri göster
                }
            });
        });
    </script>
}
