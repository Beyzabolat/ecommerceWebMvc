
@model ecommerceWebMvcUser.Models.Classes.LoginModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Html.ValidationSummary();
@using (Html.BeginForm())
{

    @Html.AntiForgeryToken();
    <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl" />
    <!-- Page Title -->
    <div class="page section-header text-center">
        <div class="page-title">
            <div class="wrapper"><h1 class="page-width">Giriş Yap</h1></div>
        </div>
    </div>
    <!-- End Page Title -->

    <div class="container">
        <div class="row">
            <div class="col-12 col-sm-12 col-md-6 col-lg-6 main-col offset-md-3">
                <div class="mb-4">
                    <div class="row">


                        <div class="col-12 col-sm-12 col-md-12 col-lg-12">
                            <div class="form-group">
                                <label>Kullanıcı Adı</label>
                                @Html.TextBoxFor(i => i.KullaniciAdi, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-12 col-sm-12 col-md-12 col-lg-12">
                            <div class="form-group">
                                <label>Şifre</label>
                                @Html.PasswordFor(i => i.Sifre, new { @class = "form-control" })

                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="text-center col-12 col-sm-12 col-md-12 col-lg-12">
                            <button type="submit" class="btn btn-primary">Giriş Yap</button>
                            <p class="mb-4">
                                <a href="#" id="RecoverPassword">Şifreni mi unuttun?</a> &nbsp; | &nbsp;
                                <a href="/Account/Register" id="customer_register_link">Hesap Oluştur</a>
                            </p>
                            @*<input type="submit" class="btn mb-3" value="Kaydol">*@
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
