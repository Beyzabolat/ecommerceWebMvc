@using ecommerceWebMvc.Models.Classes;
@model List<Urunler>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="main-container">
    <div class="pd-ltr-20">
        <div class="card-box pd-20 height-100-p mb-30">
            <div class="row align-items-center">
                <div class="col-md-4">
                    <img src="/deskapp-master/vendors/images/banner-img.png" alt="" />
                </div>
                <div class="col-md-8">

                    <h4 class="font-20 weight-500 mb-10 text-capitalize">
                        @if (User.Identity.IsAuthenticated)
                        {


                            <div class="weight-600 font-30 text-blue">Hoşgeldin @User.Identity.Name!</div>
                        }

                        @*<div class="weight-600 font-30 text-blue">Johnny Brown!</div>*@
                    </h4>
                    <p class="font-18 max-width-600">

                        Admin paneline hoş geldiniz.Bu güçlü araç, web sitenizi yönetmek için kullanabileceğiniz bir kontrol merkezidir. Verileri izleyebilir, içerikleri düzenleyebilir, kullanıcıları yönetebilir ve daha fazlasını yapabilirsiniz.
                        İyi Günler!
                    </p>

                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xl-3 mb-30">
                <div class="card-box height-100-p widget-style1">
                    <div class="d-flex flex-wrap align-items-center">
                        <div class="progress-data">
                            <div id="chart"></div>
                        </div>
                        <div class="widget-data">
                            <div class="h4 mb-0">2020</div>
                            <div class="weight-600 font-14">İletişim</div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 mb-30">
                <div class="card-box height-100-p widget-style1">
                    <div class="d-flex flex-wrap align-items-center">
                        <div class="progress-data">
                            <div id="chart2"></div>
                        </div>
                        <div class="widget-data">
                            <div class="h4 mb-0">400</div>
                            <div class="weight-600 font-14">Anlaşmalar</div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 mb-30">
                <div class="card-box height-100-p widget-style1">
                    <div class="d-flex flex-wrap align-items-center">
                        <div class="progress-data">
                            <div id="chart3"></div>
                        </div>
                        <div class="widget-data">
                            <div class="h4 mb-0">350</div>
                            <div class="weight-600 font-14">Şirketler</div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 mb-30">
                <div class="card-box height-100-p widget-style1">
                    <div class="d-flex flex-wrap align-items-center">
                        <div class="progress-data">
                            <div id="chart4"></div>
                        </div>
                        <div class="widget-data">
                            <div class="h4 mb-0">@ViewBag.d4</div>
                            <div class="weight-600 font-14">Stoktaki Ürün Sayısı</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
      

        <div class="card-box mb-30">

            <h2 class="h4 pd-20">En Çok Satanlar</h2>
            <table class="data-table table nowrap">
                <thead>
                    <tr>
                        <th class="table-plus datatable-nosort">Ürün</th>
                        <th>Ürün Adı</th>
                        <th>Marka</th>
                        <th>Satış Fiyatı</th>
                        
                        <th>Cinsiyet</th>
                        <th>Kategori</th>
                        <th class="datatable-nosort">Aksiyonlar</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var b in Model)
                    {
                    <tr>
                        <td class="table-plus">
                            <img src="@b.UrunGorsel"
                                 width="70"
                                 height="70"
                                 alt="" />
                        </td>
                        <td>@b.UrunAdi</td>
                        <td>@b.Marka</td>
                        <td>@b.SatisFiyati ₺</td>
                        <td>@b.Cinsiyet</td>
                        <td>@b.Kategori.KategoriAd</td>


                        <td>
                            <div class="dropdown">
                                <a class="btn btn-link font-24 p-0 line-height-1 no-arrow dropdown-toggle"
                                   href="#"
                                   role="button"
                                   data-toggle="dropdown">
                                    <i class="dw dw-more"></i>
                                </a>
                                <div class="dropdown-menu dropdown-menu-right dropdown-menu-icon-list">
                                    <a class="dropdown-item" href="/Urun/UrunDetay/@b.UrunID"><i class="dw dw-eye"></i> Görüntüle</a>
                                    <a class="dropdown-item" href="/Urun/UrunGetirme/@b.UrunID">
                                        <i class="dw dw-edit2"></i> Düzenle
                                    </a>

                                </div>
                            </div>
                        </td>

                    </tr>
                    }



                </tbody>
            </table>
        </div>
    </div>


</div>
