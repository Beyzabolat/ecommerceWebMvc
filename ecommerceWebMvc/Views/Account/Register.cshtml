<body class="login-page">
    <div class="login-header box-shadow">
        <div class="container-fluid d-flex justify-content-between align-items-center">
            <div class="brand-logo">
                <a href="login.html">
                    <img src="/deskapp-master/vendors/images/deskapp-logo.svg" alt="" />
                </a>
            </div>
            <div class="login-menu">
                <ul>
                    <li><a href="login.html">Giriş Yap</a></li>
                </ul>
            </div>
        </div>
    </div>


    <div class="register-page-wrap d-flex align-items-center flex-wrap justify-content-center">
        <div class="container">
            <div class="row align-items-center">

                <div class="col-md-6 col-lg-7">
                    <img src="/deskapp-master/vendors/images/register-page-img.png" alt="" />
                </div>
                <div class="col-md-6 col-lg-5">
                    <div class="register-box bg-white box-shadow border-radius-10">
                        <div class="wizard-content">
                            @*<form class="tab-wizard2 wizard-circle wizard" action="@Url.Action("Register", "Account")" method="post">*@

                            <form class="tab-wizard2 wizard-circle wizard">

                                <h5>Temel Hesap Kimlik Bilgileri</h5>
                                <section>

                                    <div class="form-wrap max-width-600 mx-auto">
                                        @Html.ValidationSummary()
                                        @using (Html.BeginForm())
                                        {
                                            @Html.AntiForgeryToken()
                                            <div class="form-group row">

                                                <label class="col-sm-4 col-form-label">Email Adresi*</label>
                                                <div class="col-sm-8">
                                                    @Html.TextBoxFor(i => i.mail, new { @class = "form-control" })

                                                    @*<input type="email" class="form-control" name="Email" />*@
                                                </div>


                                            </div>
                                            <div class="form-group row">
                                                <label class="col-sm-4 col-form-label">Kullanıcı Adı*</label>
                                                <div class="col-sm-8">
                                                    @Html.TextBoxFor(i => i.KullaniciAdi, new { @class = "form-control" })
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label class="col-sm-4 col-form-label">Şifre*</label>
                                                <div class="col-sm-8">
                                                    @Html.TextBoxFor(i => i.Sifre, new { @class = "form-control" })
                                                    @*<input type="password" class="form-control" name="Password" />*@
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label class="col-sm-4 col-form-label">İsim*</label>
                                                <div class="col-sm-8">
                                                    @Html.TextBoxFor(i => i.İsim, new { @class = "form-control" })
                                                    @*<input type="text" class="form-control" name="FirstName" />*@
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label class="col-sm-4 col-form-label">Soyisim*</label>
                                                <div class="col-sm-8">
                                                    @Html.TextBoxFor(i => i.Soyisim, new { @class = "form-control" })
                                                    @*<input type="text" class="form-control" name="LastName" />*@
                                                </div>
                                            </div>
                                            <div class="custom-control custom-checkbox mt-4">
                                                <input type="checkbox"
                                                       class="custom-control-input"
                                                       id="customCheck1" />
                                                <label class="custom-control-label" for="customCheck1">
                                                    Gizlilik Politikasını okudum ve kabul ediyorum

                                                </label>
                                            </div>
                                        }
                                    </div>
                                </section>

                                @*<h5>Genel Bakış</h5>
                                <section>
                                    <div class="form-wrap max-width-600 mx-auto">
                                        @using (Html.BeginForm())
                                        {
                                            <ul class="register-info">
                                                <li>
                                                    <div class="row">
                                                        <div class="col-sm-4 weight-600">Email Addres</div>
                                                        <div class="col-sm-8">example@abc.com</div>
                                                    </div>
                                                </li>
                                                <li>
                                                    <div class="row">
                                                        <div class="col-sm-4 weight-600">Kullanıcı Adı</div>
                                                        <div class="col-sm-8">Example</div>
                                                    </div>
                                                </li>
                                                <li>
                                                    <div class="row">
                                                        <div class="col-sm-4 weight-600">Şifre</div>
                                                        <div class="col-sm-8">.....000</div>
                                                    </div>
                                                </li>
                                                <li>
                                                    <div class="row">
                                                        <div class="col-sm-4 weight-600">İsim</div>
                                                        <div class="col-sm-8">john smith</div>
                                                    </div>
                                                </li>
                                                <li>
                                                    <div class="row">
                                                        <div class="col-sm-4 weight-600">Soyisim</div>
                                                        <div class="col-sm-8">123 Example</div>
                                                    </div>
                                                </li>
                                            </ul>
                                           
                                        }
                                        </div>
                                </section>*@
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- success Popup html Start -->
    <button type="button"
            id="success-modal-btn"
            hidden
            data-toggle="modal"
            data-target="#success-modal"
            data-backdrop="static">
        Launch modal
    </button>
    <div class="modal fade"
         id="success-modal"
         tabindex="-1"
         role="dialog"
         aria-labelledby="exampleModalCenterTitle"
         aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered max-width-400"
             role="document">
            <div class="modal-content">
                <div class="modal-body text-center font-18">
                    <h3 class="mb-20">Kayıt Başarılı!</h3>
                    <div class="mb-30 text-center">
                        <img src="/deskapp-master/vendors/images/success.png" />
                    </div>

                </div>
                <div class="modal-footer justify-content-center">
                    <a href="/Account/Login" class="btn btn-primary">Tamam</a>
                </div>
            </div>
        </div>
    </div>
    <!-- success Popup html End -->
    <!-- welcome modal end -->
    <!-- js -->
    <script src="/deskapp-master/vendors/scripts/core.js"></script>
    <script src="/deskapp-master/vendors/scripts/script.min.js"></script>
    <script src="/deskapp-master/vendors/scripts/process.js"></script>
    <script src="/deskapp-master/vendors/scripts/layout-settings.js"></script>
    <script src="/deskapp-master/src/plugins/jquery-steps/jquery.steps.js"></script>
    <script src="/deskapp-master/vendors/scripts/steps-setting.js"></script>
