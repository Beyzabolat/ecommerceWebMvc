@using ecommerceWebMvc.Models.Classes
@model List<SatisHareketi>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="main-container">
    <div class="pd-ltr-20 xs-pd-20-10">
        <div class="min-height-200px">
            <div class="page-header">
                <div class="row">
                    <div class="col-md-6 col-sm-12">
                        <div class="title">
                            <h4>Cari</h4>
                        </div>
                        <nav aria-label="breadcrumb" role="navigation">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item">
                                    <a href="/Home/Index">Anasayfa</a>
                                </li>
                                <li class="breadcrumb-item active" aria-current="page">
                                    Satış Hareketleri
                                </li>
                            </ol>
                        </nav>
                    </div>

                </div>
            </div>
            <div class="card-box mb-30">

                <h2 class="h4 pd-20">Satışlar</h2>
                <a href="/Satis/YeniSatis" class="btn btn-info">Yeni Satış Yap</a>

                <table class="data-table table nowrap">
                    <thead>
                        <tr>
                            <th>Ürün</th>
                            <th>Cari</th>
                            <th>Personel</th>
                            <th>Adet</th>
                            <th>Fiyat</th>
                            <th>Toplam Tutar</th>
                            <th>Tarih</th>
                            <th>Güncelle</th>
                            <th>Detaylar</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var b in Model)
                        {
                            <tr>

                                <td>@b.Urunler.UrunAdi</td>
                                <td>@b.Cari.CariAd @b.Cari.CariSoyad</td>
                                <td>@b.Personel.PersonelAd @b.Personel.PersonelSoyad</td>
                                <td>@b.Adet</td>
                                <td>@b.Fiyat ₺</td>
                                <td>@b.ToplamTutar ₺</td>
                                <td>@b.Tarih</td>

                                <td><a href="/Satis/SatisGetirme/@b.SatisID" class="btn btn-success">Güncelle</a></td>
                                <td>
                                    <a href="/Satis/SatisDetay/@b.SatisID" class="btn btn-group"
                                       style="background-color: #35B8FF; color: white; ">Detaylar</a>
                                </td>
                            </tr>
                        }



                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>

