@model ecommerceWebMvc.Models.Classes.Urunler

@{
    ViewBag.Title = "UrunEkleme";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}




<div class="main-container">
    <div class="pd-ltr-20 xs-pd-20-10">
        <div class="min-height-200px">
            <div class="page-header">
                <div class="row">
                    <div class="col-md-6 col-sm-12">
                        <div class="title">
                            <h4>Ürün Ekleme</h4>
                        </div>
                        <nav aria-label="breadcrumb" role="navigation">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item">
                                    <a href="#">Anasayfa</a>
                                </li>
                                <li class="breadcrumb-item active" aria-current="page">
                                    Ürünler
                                </li>
                                <li class="breadcrumb-item active" aria-current="page">
                                    Ürün Ekleme
                                </li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>

            <div class="pd-20 card-box mb-30">
                @using (Html.BeginForm("UrunEkleme", "Urun", FormMethod.Post))
                {
                    <div class="form-row">
                        <div class="form-group col-md-4">
                            @Html.LabelFor(model => model.UrunAdi)
                            @Html.TextBoxFor(model => model.UrunAdi, new { @class = "form-control" })
                        </div>
                        <div class="form-group col-md-4">
                            @Html.LabelFor(model => model.Stok)
                            @Html.TextBoxFor(model => model.Stok, new { @class = "form-control" })
                        </div>
                        <div class="form-group col-md-4">
                            @Html.LabelFor(model => model.Marka)
                            @Html.TextBoxFor(model => model.Marka, new { @class = "form-control" })
                        </div>

                        <div class="form-group col-md-4">
                            @Html.LabelFor(model => model.AlisFiyati)
                            <input type="number" class="form-control" id="AlisFiyati" name="AlisFiyati" min="0" max="10000" step="0.01" />
                        </div>
                        <div class="form-group col-md-4">
                            @Html.LabelFor(model => model.SatisFiyati)
                            <input type="number" class="form-control" id="SatisFiyati" name="SatisFiyati" min="0" max="10000" step="0.01" />
                        </div>


                        @*<div class="form-group col-md-4">



                                <label for="kategoriDurum">Durum</label>
                                <select id="kategoriDurum" name="Durum" class="form-control">
                                    <option value="true">Aktif</option>
                                    <option value="false">Pasif</option>
                                </select>
                            </div>*@
                        <div class="form-group col-md-4">
                            <label for="kategoriDurum">Durum</label>
                            <select id="kategoriDurum" name="Durum" class="form-control">
                                <option value="">Lütfen bir seçenek seçin</option>
                                <option value="true">Aktif</option>
                                <option value="false">Pasif</option>
                            </select>
                        </div>

                        <div class="form-group col-md-4">
                            @Html.LabelFor(model => model.UrunGorsel)
                            @Html.TextBoxFor(model => model.UrunGorsel, new { @class = "form-control" })
                        </div>
                        <div class="form-group col-md-4">
                            @Html.LabelFor(model => model.Renk)
                            @Html.TextBoxFor(model => model.Renk, new { @class = "form-control" })
                        </div>
                        <div class="form-group col-md-4">
                            @Html.LabelFor(model => model.Beden)
                            <select id="bedenSecim" name="Beden" class="form-control">
                                <option value="">Lütfen bir seçenek seçin</option>
                                <option value="xs">XS</option>
                                <option value="s">S</option>
                                <option value="m">M</option>
                                <option value="l">L</option>
                                <option value="xl">XL</option>
                                <option value="xxl">XXL</option>
                            </select>
                        </div>
                        <div class="form-group col-md-4">
                            @Html.LabelFor(model => model.Numara)
                            @Html.TextBoxFor(model => model.Numara, new { @class = "form-control" })
                        </div>

                        <div class="form-group col-md-4">
                            @Html.LabelFor(model => model.Cinsiyet)
                            @Html.DropDownListFor(model => model.Cinsiyet, new SelectList(new[]
                            {
                                new SelectListItem { Text = "Kadın", Value = "Kadın" },
                                new SelectListItem { Text = "Erkek", Value = "Erkek" },
                                new SelectListItem { Text = "Çocuk", Value = "Çocuk" }
                            }, "Value", "Text"), "Lütfen bir seçenek seçin", new { @class = "form-control" })
                        </div>
                        <div class="form-group col-md-4">
                            @Html.LabelFor(model => model.Kategori)
                            @Html.DropDownListFor(x => x.Kategoriid, (List<SelectListItem>)ViewBag.dgr1, "Lütfen bir seçenek seçin", new
                           {
                               @class = "form-control"
                           })
                        </div>


                    </div>
                    <!-- Diğer alanları da aynı mantıkla ekleyebilirsiniz -->

                    <button type="submit" class="btn btn-primary">Kaydet</button>
                }
            </div>
        </div>
    </div>
</div>
