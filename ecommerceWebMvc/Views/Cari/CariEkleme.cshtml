@model ecommerceWebMvc.Models.Classes.Cari

@{
    ViewBag.Title = "CariEkleme";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}





<div class="main-container">
    <div class="pd-ltr-20 xs-pd-20-10">
        <div class="min-height-200px">
            <div class="page-header">
                <div class="row">
                    <div class="col-md-6 col-sm-12">
                        <div class="title">
                            <h4>Cari Ekleme</h4>
                        </div>
                        <nav aria-label="breadcrumb" role="navigation">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item">
                                    <a href="#">Anasayfa</a>
                                </li>
                                <li class="breadcrumb-item active" aria-current="page">
                                    Cari
                                </li>
                                <li class="breadcrumb-item active" aria-current="page">
                                    Cari Ekleme
                                </li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>

            <div class="pd-20 card-box mb-30">

                <form class="form-group" method="post">
                    <div class="form-row">
                        <div class="form-group col-md-4">
                            @Html.LabelFor(model => model.CariAd)
                            @Html.TextBoxFor(model => model.CariAd, new { @class = "form-control" })
                        </div>
                        <div class="form-group col-md-4">
                            @Html.LabelFor(model => model.CariSoyad)
                            @Html.TextBoxFor(model => model.CariSoyad, new { @class = "form-control" })
                        </div>
                        <div class="form-group col-md-4">
                            @Html.LabelFor(model => model.CariSehir)
                            @Html.TextBoxFor(model => model.CariSehir, new { @class = "form-control" })
                        </div>
                        <div class="form-group col-md-4">
                            @Html.LabelFor(model => model.CariMail)
                            @Html.TextBoxFor(model => model.CariMail, new { @class = "form-control" })
                        </div>
                        <div class="form-group col-md-4">
                            <label for="kategoriDurum">Durum</label>
                            <select id="kategoriDurum" name="Durum" class="form-control">
                                <option value="">Lütfen bir seçenek seçin</option>
                                <option value="true">Aktif</option>
                                <option value="false">Pasif</option>
                            </select>
                        </div>
                    </div>
                    <button class="btn btn-primary">Kaydet</button>
                </form>

                
            </div>
        </div>
    </div>
</div>
