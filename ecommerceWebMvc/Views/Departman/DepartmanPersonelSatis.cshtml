@using ecommerceWebMvc.Models.Classes
@model  List<SatisHareketi>
@{
    ViewBag.Title = "DepartmanPersonelSatis";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="main-container">
    <div class="pd-ltr-20 xs-pd-20-10">
        <div class="min-height-200px">
            <div class="page-header">
                <div class="row">
                    <div class="col-md-6 col-sm-12">
                        <div class="title">
                            <h4>Departman</h4>
                        </div>
                        <nav aria-label="breadcrumb" role="navigation">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item">
                                    <a href="/Home/Index">Anasayfa</a>
                                </li>
                                <li class="breadcrumb-item">
                                    <a href="/Departman/Index">Departmanlar</a>
                                </li>
                                <li class="breadcrumb-item active" aria-current="page">
                                    Departman Personel Satış Sayfası
                                </li>
                            </ol>
                        </nav>
                    </div>

                </div>
            </div>

            <div class="card-box mb-30">

                <div class="pd-20 card-box mb-30">
                    <ol class="breadcrumb mb-4">
                        <li class="breadcrumb-item active">Personel Adı: @ViewBag.dp</li>
                    </ol>

                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>



                                    <th scope="col">Satış ID</th>
                                    <th scope="col">Ürün</th>
                                    <th scope="col">Cari</th>
                                    <th scope="col">Fiyat</th>
                                    <th scope="col">Adet</th>
                                    <th scope="col">Toplam</th>
                                    <th scope="col">Tarih</th>
                                    <th scope="col">Yazdır</th>

                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var x in Model)
                                {
                                <tr>
                                    <td>@x.SatisID</td>
                                    <td>@x.Urunler.UrunAdi</td>
                                    <td>@x.Cari.CariAd @x.Cari.CariSoyad</td>
                                    <td>@x.Fiyat</td>
                                    <td>@x.Adet</td>
                                    <td>@x.ToplamTutar</td>
                                    <td>@x.Tarih</td>
                                    <td><a href="#" class="btn btn-default" style="background-color: #708EE9; color: white ">Yazdır</a></td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                </div>

            </div>
        </div>
    </div>
</div>