@model ecommerceWebMvc.Models.Classes.Personel
@{
    ViewBag.Title = "PersonelGetirme";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="main-container">
    <div class="pd-ltr-20 xs-pd-20-10">
        <div class="min-height-200px">
            <div class="page-header">
                <div class="row">
                    <div class="col-md-6 col-sm-12">
                        <div class="title">
                            <h4>Personel Ekleme</h4>
                        </div>
                        <nav aria-label="breadcrumb" role="navigation">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item">
                                    <a href="#">Anasayfa</a>
                                </li>
                                <li class="breadcrumb-item active" aria-current="page">
                                    Personel
                                </li>
                                <li class="breadcrumb-item active" aria-current="page">
                                    Personel Güncelleme
                                </li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>

            <div class="pd-20 card-box mb-30">
                @using (Html.BeginForm("PersonelGuncelleme", "Personel", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <form class="form-group" method="post">
                        <div class="form-row">
                            <div class="form-group col-md-4">
                                @Html.HiddenFor(x => x.PersonelID)
                                @Html.LabelFor(x => x.PersonelAd)
                                @Html.TextBoxFor(x => x.PersonelAd, new { @class = "form-control" })
                            </div>
                            <div class="form-group col-md-4">
                                @Html.LabelFor(x => x.PersonelSoyad)
                                @Html.TextBoxFor(x => x.PersonelSoyad, new { @class = "form-control" })
                            </div>
                            <div class="form-group col-md-4">
                                @Html.LabelFor(x => x.PersonelGorsel)
                                <input type="file" name="PersonelGorsel" />
                            </div>
                            <div class="form-group col-md-4">

                                @Html.LabelFor(x => x.Departman)
                                @Html.DropDownListFor(x => x.Departmanid, (List<SelectListItem>)ViewBag.dgr1, new
                            {
                                    @class = "form-control"
                            })
                            </div>
                            <div class="form-group col-md-4">
                                @Html.LabelFor(model => model.Durum)
                                @Html.DropDownListFor(model => model.Durum, new SelectList(new[]
                                {
                                    new SelectListItem { Text = "Aktif", Value = "true" },
                                    new SelectListItem { Text = "Pasif", Value = "false" }
                                }, "Value", "Text"), "Lütfen bir seçenek seçin", new { @class = "form-control" })
                            </div>
                        </div>
                        <button class="btn btn-primary">Güncelle</button>
                    </form>
                }

            </div>
        </div>
    </div>
</div>
